<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.shoppingapplication.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.example.shoppingapplication.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" >
        <action
            android:id="@+id/action_nav_gallery_to_listFragment"
            app:destination="@id/listFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.shoppingapplication.ui.detail.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" />
    <fragment
        android:id="@+id/listFragment"
        android:name="com.example.shoppingapplication.ui.list.ListFragment"
        android:label="fragment_list"
        tools:layout="@layout/fragment_list" />
    <fragment
        android:id="@+id/nav_category"
        android:name="com.example.shoppingapplication.ui.category.CategoryFragment"
        android:label="Category"
        tools:layout="@layout/fragment_category" >
        <action
            android:id="@+id/action_nav_category_to_fruitListFragment"
            app:destination="@id/fruitListFragment" />
        <action
            android:id="@+id/action_nav_category_to_proteinListFragment"
            app:destination="@id/proteinListFragment" />
        <action
            android:id="@+id/action_nav_category_to_carbListFragment"
            app:destination="@id/carbListFragment" />
        <action
            android:id="@+id/action_nav_category_to_vegetableListFragment"
            app:destination="@id/vegetableListFragment" />
    </fragment>
    <fragment
        android:id="@+id/nav_shoppingList"
        android:name="com.example.shoppingapplication.ui.list.ShoppingListFragment"
        android:label="Shopping List"
        tools:layout="@layout/fragment_shopping_list" />
    <fragment
        android:id="@+id/nav_cart"
        android:name="com.example.shoppingapplication.ui.cart.CartFragment"
        android:label="Cart"
        tools:layout="@layout/fragment_cart" />
    <fragment
        android:id="@+id/nav_history"
        android:name="com.example.shoppingapplication.ui.history.HistoryFragment"
        android:label="History"
        tools:layout="@layout/fragment_history" />
    <fragment
        android:id="@+id/nav_profile"
        android:name="com.example.shoppingapplication.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_nav_profile_to_nav_settings"
            app:destination="@id/nav_settings" />
    </fragment>
    <fragment
        android:id="@+id/nav_settings"
        android:name="com.example.shoppingapplication.ui.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/fruitListFragment"
        android:name="com.example.shoppingapplication.ui.list.FruitListFragment"
        android:label="Fruit List"
        tools:layout="@layout/fragment_fruit_list" />
    <fragment
        android:id="@+id/proteinListFragment"
        android:name="com.example.shoppingapplication.ui.list.proteinList.ProteinListFragment"
        android:label="Protein List"
        tools:layout="@layout/fragment_protein_list" />
    <fragment
        android:id="@+id/vegetableListFragment"
        android:name="com.example.shoppingapplication.ui.list.vegetableListFragment"
        android:label="Vegetable List"
        tools:layout="@layout/fragment_vegetable_list" />
    <fragment
        android:id="@+id/carbListFragment"
        android:name="com.example.shoppingapplication.ui.list.carbListFragment"
        android:label="Carb List"
        tools:layout="@layout/fragment_carb_list" />


</navigation>